<Window x:Class="Echo.Views.UpdateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Available"
        Width="600"
        Height="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E1E">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="20">
            <StackPanel>
                <TextBlock Text="ðŸŽ‰ Update Available!" 
                          FontSize="24" 
                          FontWeight="Bold"
                          Foreground="#4CAF50"/>
                
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Current Version: " 
                              FontSize="14" 
                              Foreground="#B0B0B0"/>
                    <TextBlock x:Name="CurrentVersionText" 
                              Text="v1.0.0" 
                              FontSize="14" 
                              FontWeight="Bold"
                              Foreground="White"/>
                    
                    <TextBlock Text=" â†’ " 
                              FontSize="14" 
                              Foreground="#B0B0B0" 
                              Margin="10,0"/>
                    
                    <TextBlock Text="New Version: " 
                              FontSize="14" 
                              Foreground="#B0B0B0"/>
                    <TextBlock x:Name="NewVersionText" 
                              Text="v1.1.0" 
                              FontSize="14" 
                              FontWeight="Bold"
                              Foreground="#4CAF50"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="ðŸ“¦ Size: " 
                              FontSize="12" 
                              Foreground="#B0B0B0"/>
                    <TextBlock x:Name="FileSizeText" 
                              Text="5.2 MB" 
                              FontSize="12" 
                              Foreground="White"/>
                    
                    <TextBlock Text=" â€¢ " 
                              FontSize="12" 
                              Foreground="#B0B0B0" 
                              Margin="10,0"/>
                    
                    <TextBlock Text="ðŸ“… Released: " 
                              FontSize="12" 
                              Foreground="#B0B0B0"/>
                    <TextBlock x:Name="ReleaseDateText" 
                              Text="Oct 6, 2025" 
                              FontSize="12" 
                              Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Changelog -->
        <Border Grid.Row="1" 
                Background="#252526" 
                Margin="10"
                BorderBrush="#3F3F46"
                BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="15">
                    <TextBlock Text="What's New" 
                              FontSize="16" 
                              FontWeight="Bold"
                              Foreground="White"
                              Margin="0,0,0,10"/>
                    
                    <TextBlock x:Name="ChangelogText"
                              TextWrapping="Wrap"
                              FontSize="13"
                              LineHeight="20"
                              Foreground="#CCCCCC"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#2D2D30" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Skip This Version Checkbox -->
                <CheckBox x:Name="SkipVersionCheckBox"
                         Grid.Column="0"
                         Content="Skip this version"
                         Foreground="#B0B0B0"
                         VerticalAlignment="Center"
                         Margin="0,0,20,0"/>

                <!-- Buttons -->
                <Button Grid.Column="2"
                       Content="Remind Me Later"
                       Width="140"
                       Height="35"
                       Margin="0,0,10,0"
                       Background="#3F3F46"
                       Foreground="White"
                       BorderBrush="#555555"
                       BorderThickness="1"
                       Click="RemindLater_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               BorderBrush="{TemplateBinding BorderBrush}"
                                               BorderThickness="{TemplateBinding BorderThickness}"
                                               CornerRadius="3">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#4F4F56"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="3"
                       Content="â¬‡ Update Now"
                       Width="140"
                       Height="35"
                       Background="#4CAF50"
                       Foreground="White"
                       BorderThickness="0"
                       FontWeight="Bold"
                       Click="UpdateNow_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="3">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5DBE61"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
