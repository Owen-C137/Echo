<Window x:Class="Echo.Views.AlternativeMatchesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Alternative Matches"
        Height="500" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" Padding="20,15">
            <StackPanel>
                <TextBlock Text="Alternative File Matches" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextBrush}"/>
                <TextBlock x:Name="MissingFileText" Text="Missing: " FontSize="13" Foreground="{StaticResource ErrorBrush}" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Matches List -->
        <ListBox x:Name="MatchesListBox" Grid.Row="1" 
                Background="{StaticResource BackgroundBrush}" 
                BorderThickness="0"
                Margin="20,10,20,10"
                SelectionMode="Single">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="{StaticResource SurfaceBrush}" Padding="15" Margin="0,0,0,10" CornerRadius="4">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="{Binding FoundPath}" FontSize="14" FontWeight="SemiBold" 
                                      Foreground="{StaticResource PrimaryBrush}" TextWrapping="Wrap"/>
                            
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="Confidence: " FontSize="12" Foreground="{StaticResource SubtleBrush}"/>
                                <TextBlock Text="{Binding MatchScore}" FontSize="12" FontWeight="Bold" Foreground="{Binding ConfidenceColor}"/>
                                <TextBlock Text="%" FontSize="12" FontWeight="Bold" Foreground="{Binding ConfidenceColor}"/>
                                
                                <TextBlock Text="  â€¢  " FontSize="12" Foreground="{StaticResource SubtleBrush}"/>
                                
                                <TextBlock Text="Reason: " FontSize="12" Foreground="{StaticResource SubtleBrush}"/>
                                <TextBlock Text="{Binding MatchReason}" FontSize="12" Foreground="{StaticResource TextBrush}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="Size: " FontSize="12" Foreground="{StaticResource SubtleBrush}"/>
                                <TextBlock Text="{Binding FileSizeFormatted}" FontSize="12" Foreground="{StaticResource TextBrush}"/>
                            </StackPanel>

                            <TextBlock Grid.Row="3" Text="{Binding FullPath}" FontSize="11" Foreground="{StaticResource SubtleBrush}" 
                                      Margin="0,5,0,0" TextWrapping="Wrap"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Use Selected" Click="UseSelected_Click"
                       Style="{StaticResource PrimaryButton}"
                       Padding="20,10" FontSize="14" FontWeight="Bold"
                       Cursor="Hand" Margin="0,0,10,0"/>
                
                <Button Content="Cancel" Click="Cancel_Click"
                       Padding="20,10" FontSize="14"
                       Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
