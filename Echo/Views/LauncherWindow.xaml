<Window x:Class="Echo.Views.LauncherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Echo - Black Ops 3 Multi-Tool" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}"
        ResizeMode="CanMinimize">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryBrush}" 
                Padding="32,24">
            <Grid>
                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock Text="ECHO" 
                               FontSize="36" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource TextBrush}"/>
                    <TextBlock Text="Black Ops 3 Multi-Tool Suite" 
                               FontSize="16" 
                               Foreground="{StaticResource TextBrush}" 
                               Opacity="0.9"
                               Margin="0,4,0,0"/>
                </StackPanel>
                
                <TextBlock x:Name="VersionText"
                          Text="v1.0.1" 
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"
                          FontSize="16"
                          FontWeight="SemiBold"
                          Foreground="{StaticResource TextBrush}"
                          Opacity="0.9"/>
            </Grid>
        </Border>

        <!-- Update Notification Banner (Hidden by default) -->
        <Border x:Name="UpdateNotificationBanner"
                Grid.Row="1" 
                Background="{StaticResource SuccessBrush}"
                Visibility="Collapsed"
                Cursor="Hand"
                Padding="16,12"
                MouseLeftButtonUp="UpdateNotificationBanner_Click">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0"
                          Text="🔔"
                          FontSize="20"
                          VerticalAlignment="Center"
                          Margin="0,0,12,0"/>
                
                <StackPanel Grid.Column="1"
                           VerticalAlignment="Center">
                    <TextBlock FontSize="14"
                              FontWeight="SemiBold"
                              Foreground="{StaticResource TextBrush}">
                        <Run Text="Update Available: "/>
                        <Run x:Name="UpdateVersionLabel" Text="v1.1.0"/>
                    </TextBlock>
                    <TextBlock Text="Click here to download and install"
                              FontSize="12"
                              Foreground="{StaticResource TextBrush}"
                              Opacity="0.9"
                              Margin="0,2,0,0"/>
                </StackPanel>
                
                <TextBlock Grid.Column="2"
                          Text="→"
                          FontSize="20"
                          Foreground="{StaticResource TextBrush}"
                          VerticalAlignment="Center"
                          Margin="12,0,0,0"/>
            </Grid>
        </Border>

        <!-- Tool Selection Grid -->
        <ScrollViewer Grid.Row="2" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="32,24">
            <StackPanel>
                <TextBlock Text="Select a Tool" 
                           FontSize="20" 
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}"
                           Margin="0,0,0,20"/>

                <!-- Tool Buttons -->
                <Button Style="{DynamicResource ToolButton}" 
                        Height="120"
                        Margin="0,0,0,16"
                        ToolTip="Open the GDT Package Manager to create asset packages"
                        Click="OpenGdtPacker">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Icon -->
                        <Border Grid.Column="0" 
                                Background="{StaticResource PrimaryBrush}" 
                                CornerRadius="8"
                                Width="64" Height="64"
                                HorizontalAlignment="Left">
                            <TextBlock Text="📦" 
                                      FontSize="32" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                        
                        <!-- Content -->
                        <StackPanel Grid.Column="1" 
                                   VerticalAlignment="Center"
                                   Margin="16,0,0,0">
                            <TextBlock Text="GDT Package Manager" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      Foreground="{StaticResource TextBrush}"/>
                            <TextBlock Text="Create and extract AGDT asset packages with automatic dependency scanning" 
                                      FontSize="13" 
                                      Foreground="{StaticResource SubtleBrush}"
                                      TextWrapping="Wrap"
                                      Margin="0,6,0,0"/>
                            <TextBlock Text="→ Click to open" 
                                      FontSize="12" 
                                      Foreground="{StaticResource PrimaryBrush}"
                                      Margin="0,8,0,0"
                                      FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>
                </Button>

                <!-- Placeholder for future tools -->
                <Button Style="{DynamicResource ToolButton}" 
                        Height="120"
                        Margin="0,0,0,16"
                        IsEnabled="False"
                        Opacity="0.5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0" 
                                Background="{StaticResource BorderBrush}" 
                                CornerRadius="8"
                                Width="64" Height="64"
                                HorizontalAlignment="Left">
                            <TextBlock Text="🔧" 
                                      FontSize="32" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1" 
                                   VerticalAlignment="Center"
                                   Margin="16,0,0,0">
                            <TextBlock Text="Asset Converter (Coming Soon)" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      Foreground="{StaticResource TextBrush}"/>
                            <TextBlock Text="Convert assets between different formats" 
                                      FontSize="13" 
                                      Foreground="{StaticResource SubtleBrush}"
                                      Margin="0,6,0,0"/>
                        </StackPanel>
                    </Grid>
                </Button>

                <Button Style="{DynamicResource ToolButton}" 
                        Height="120"
                        Margin="0,0,0,16"
                        IsEnabled="False"
                        Opacity="0.5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0" 
                                Background="{StaticResource BorderBrush}" 
                                CornerRadius="8"
                                Width="64" Height="64"
                                HorizontalAlignment="Left">
                            <TextBlock Text="🗺️" 
                                      FontSize="32" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1" 
                                   VerticalAlignment="Center"
                                   Margin="16,0,0,0">
                            <TextBlock Text="Map Utilities (Coming Soon)" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      Foreground="{StaticResource TextBrush}"/>
                            <TextBlock Text="Tools for working with Black Ops 3 maps" 
                                      FontSize="13" 
                                      Foreground="{StaticResource SubtleBrush}"
                                      Margin="0,6,0,0"/>
                        </StackPanel>
                    </Grid>
                </Button>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="3" 
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="32,16">
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Left">
                <Button Content="⚙️ Settings" 
                        Width="120" 
                        ToolTip="Configure game path, theme, and other settings"
                        Click="OpenSettings"
                        Margin="0,0,8,0"/>
                <Button Content="📖 Docs" 
                        Width="120" 
                        ToolTip="View documentation and user guide"
                        Click="OpenDocs"
                        Margin="0,0,8,0"/>
                <Button Content="📋 Changelog" 
                        Width="120" 
                        ToolTip="View version history and release notes"
                        Click="OpenChangelog"
                        Margin="0,0,8,0"/>
                <Button Content="🔄 Check for Updates" 
                        Width="150"
                        ToolTip="Check for new versions of Echo"
                        Click="CheckForUpdates_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
