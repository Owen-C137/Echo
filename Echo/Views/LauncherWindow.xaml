<Window x:Class="Echo.Views.LauncherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Echo - Black Ops 3 Multi-Tool" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryBrush}" 
                Padding="32,24">
            <StackPanel>
                <TextBlock Text="ECHO" 
                           FontSize="36" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock Text="Black Ops 3 Multi-Tool Suite" 
                           FontSize="16" 
                           Foreground="White" 
                           Opacity="0.9"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Update Notification Banner (Hidden by default) -->
        <Border x:Name="UpdateNotificationBanner"
                Grid.Row="1" 
                Background="#4CAF50"
                Visibility="Collapsed"
                Cursor="Hand"
                Padding="16,12"
                MouseLeftButtonUp="UpdateNotificationBanner_Click">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0"
                          Text="ðŸ””"
                          FontSize="20"
                          VerticalAlignment="Center"
                          Margin="0,0,12,0"/>
                
                <StackPanel Grid.Column="1"
                           VerticalAlignment="Center">
                    <TextBlock FontSize="14"
                              FontWeight="SemiBold"
                              Foreground="White">
                        <Run Text="Update Available: "/>
                        <Run x:Name="UpdateVersionLabel" Text="v1.1.0"/>
                    </TextBlock>
                    <TextBlock Text="Click here to download and install"
                              FontSize="12"
                              Foreground="White"
                              Opacity="0.9"
                              Margin="0,2,0,0"/>
                </StackPanel>
                
                <TextBlock Grid.Column="2"
                          Text="â†’"
                          FontSize="20"
                          Foreground="White"
                          VerticalAlignment="Center"
                          Margin="12,0,0,0"/>
            </Grid>
        </Border>

        <!-- Tool Selection Grid -->
        <ScrollViewer Grid.Row="2" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="32,24">
            <StackPanel>
                <TextBlock Text="Select a Tool" 
                           FontSize="20" 
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}"
                           Margin="0,0,0,20"/>

                <!-- Tool Buttons -->
                <Button Style="{StaticResource ToolButton}" 
                        Height="120"
                        Margin="0,0,0,16"
                        Click="OpenGdtPacker">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Icon -->
                        <Border Grid.Column="0" 
                                Background="{StaticResource PrimaryBrush}" 
                                CornerRadius="8"
                                Width="64" Height="64"
                                HorizontalAlignment="Left">
                            <TextBlock Text="ðŸ“¦" 
                                      FontSize="32" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                        
                        <!-- Content -->
                        <StackPanel Grid.Column="1" 
                                   VerticalAlignment="Center"
                                   Margin="16,0,0,0">
                            <TextBlock Text="GDT Package Manager" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      Foreground="{StaticResource TextBrush}"/>
                            <TextBlock Text="Create and extract AGDT asset packages with automatic dependency scanning" 
                                      FontSize="13" 
                                      Foreground="{StaticResource SubtleBrush}"
                                      TextWrapping="Wrap"
                                      Margin="0,6,0,0"/>
                            <TextBlock Text="â†’ Click to open" 
                                      FontSize="12" 
                                      Foreground="{StaticResource PrimaryBrush}"
                                      Margin="0,8,0,0"
                                      FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>
                </Button>

                <!-- Placeholder for future tools -->
                <Button Style="{StaticResource ToolButton}" 
                        Height="120"
                        Margin="0,0,0,16"
                        IsEnabled="False"
                        Opacity="0.5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0" 
                                Background="#9E9E9E" 
                                CornerRadius="8"
                                Width="64" Height="64"
                                HorizontalAlignment="Left">
                            <TextBlock Text="ðŸ”§" 
                                      FontSize="32" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1" 
                                   VerticalAlignment="Center"
                                   Margin="16,0,0,0">
                            <TextBlock Text="Asset Converter (Coming Soon)" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      Foreground="{StaticResource TextBrush}"/>
                            <TextBlock Text="Convert assets between different formats" 
                                      FontSize="13" 
                                      Foreground="{StaticResource SubtleBrush}"
                                      Margin="0,6,0,0"/>
                        </StackPanel>
                    </Grid>
                </Button>

                <Button Style="{StaticResource ToolButton}" 
                        Height="120"
                        Margin="0,0,0,16"
                        IsEnabled="False"
                        Opacity="0.5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0" 
                                Background="#9E9E9E" 
                                CornerRadius="8"
                                Width="64" Height="64"
                                HorizontalAlignment="Left">
                            <TextBlock Text="ðŸ—ºï¸" 
                                      FontSize="32" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1" 
                                   VerticalAlignment="Center"
                                   Margin="16,0,0,0">
                            <TextBlock Text="Map Utilities (Coming Soon)" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      Foreground="{StaticResource TextBrush}"/>
                            <TextBlock Text="Tools for working with Black Ops 3 maps" 
                                      FontSize="13" 
                                      Foreground="{StaticResource SubtleBrush}"
                                      Margin="0,6,0,0"/>
                        </StackPanel>
                    </Grid>
                </Button>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="3" 
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="32,16">
            <Grid>
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Left">
                    <Button Content="âš™ï¸ Settings" 
                            Width="120" 
                            Click="OpenSettings"
                            Margin="0,0,8,0"/>
                    <Button Content="ðŸ“– Docs" 
                            Width="120" 
                            Click="OpenDocs"
                            Margin="0,0,8,0"/>
                    <Button Content="ðŸ“‹ Changelog" 
                            Width="120" 
                            Click="OpenChangelog"
                            Margin="0,0,8,0"/>
                    <Button Content="ðŸ”„ Check for Updates" 
                            Width="150"
                            Click="CheckForUpdates_Click"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right">
                    <TextBlock x:Name="VersionText"
                              Text="v1.0.0" 
                              Foreground="{StaticResource SubtleBrush}"
                              VerticalAlignment="Center"
                              Margin="0,0,16,0"
                              FontSize="11"/>
                    <TextBlock Text="BO3 Path: " 
                              Foreground="{StaticResource SubtleBrush}"
                              VerticalAlignment="Center"/>
                    <TextBlock x:Name="Bo3PathText" 
                              Text="Not configured" 
                              Foreground="{StaticResource TextBrush}"
                              VerticalAlignment="Center"
                              FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
