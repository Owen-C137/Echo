<Window x:Class="Echo.Views.PackageProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Creating Package" 
        Height="300" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E1E"
        WindowStyle="ToolWindow">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="ProgressBar">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Foreground" Value="#0E639C"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   x:Name="TitleText"
                   Text="Creating package..." 
                   FontSize="16" 
                   FontWeight="SemiBold"
                   Margin="0,0,0,15"/>

        <!-- Progress Bar -->
        <ProgressBar Grid.Row="1" 
                     x:Name="ProgressBar"
                     Minimum="0"
                     Maximum="100"
                     Value="0"
                     Margin="0,0,0,10"/>

        <!-- Progress Text -->
        <TextBlock Grid.Row="2" 
                   x:Name="ProgressText"
                   Text="Preparing..."
                   FontSize="13"
                   Margin="0,0,0,10"/>

        <!-- Live Log -->
        <Border Grid.Row="3" 
                Background="#252526"
                BorderBrush="#3F3F46"
                BorderThickness="1"
                Margin="0,0,0,15">
            <ScrollViewer x:Name="LogScrollViewer"
                          VerticalScrollBarVisibility="Auto"
                          Padding="10">
                <TextBlock x:Name="LogText"
                           FontFamily="Consolas"
                           FontSize="11"
                           Foreground="#CCCCCC"
                           TextWrapping="Wrap"/>
            </ScrollViewer>
        </Border>

        <!-- Buttons (initially hidden) -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    x:Name="ButtonPanel"
                    Visibility="Collapsed">
            <Button x:Name="OpenFolderButton"
                    Content="Open Output Folder"
                    Width="150"
                    Height="30"
                    Margin="0,0,10,0"
                    Click="OpenFolderButton_Click"
                    Background="#0E639C"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
            <Button x:Name="CloseButton"
                    Content="Close"
                    Width="100"
                    Height="30"
                    Click="CloseButton_Click"
                    Background="#0E639C"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
