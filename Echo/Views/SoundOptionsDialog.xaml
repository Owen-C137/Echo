<Window x:Class="Echo.Views.SoundOptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sound Alias Options" 
        Height="320" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E1E">
    
    <Window.Resources>
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="Margin" Value="20,4,0,0"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="How would you like to handle sound alias files?" 
                   FontSize="14" 
                   FontWeight="SemiBold"
                   Foreground="White"
                   Margin="0,0,0,15"/>

        <StackPanel Grid.Row="1">
            <RadioButton x:Name="ConsolidatedOption" 
                         Content="ðŸ“ Create consolidated CSV file" 
                         IsChecked="True"
                         Checked="ConsolidatedOption_Checked"/>
            <TextBlock Text="Creates a single custom CSV file with only the sound aliases used by this weapon."/>
            
            <StackPanel Margin="20,8,0,0" IsEnabled="{Binding IsChecked, ElementName=ConsolidatedOption}">
                <TextBlock Text="Consolidated CSV filename:" Margin="0,0,0,4" FontWeight="SemiBold"/>
                <TextBox x:Name="ConsolidatedNameTextBox" 
                         Text="echo_consolidated"
                         MaxLength="50"/>
                <TextBlock Text="Note: .csv extension will be added automatically" 
                           FontSize="10" 
                           Foreground="#999999"
                           Margin="0,2,0,0"/>
            </StackPanel>

            <RadioButton x:Name="CopyFullOption" 
                         Content="ðŸ“‹ Copy full CSV alias files" 
                         Margin="0,15,0,0"
                         Checked="CopyFullOption_Checked"/>
            <TextBlock Text="Copies the entire CSV alias files (may include aliases not used by this weapon)."/>

            <RadioButton x:Name="SkipSoundsOption" 
                         Content="ðŸš« Skip sound files" 
                         Margin="0,15,0,0"
                         Checked="SkipSoundsOption_Checked"/>
            <TextBlock Text="Don't include any sound files or CSV aliases in the package."/>
        </StackPanel>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button Content="OK" 
                    Width="80" 
                    Height="30" 
                    Click="OK_Click"
                    IsDefault="True"
                    Background="#0E639C"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
            <Button Content="Cancel" 
                    Width="80" 
                    Height="30" 
                    Margin="10,0,0,0"
                    Click="Cancel_Click"
                    IsCancel="True"
                    Background="#3F3F46"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
